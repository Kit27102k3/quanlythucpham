{
  "version": 2,
  "builds": [
    {
      "src": "server/**",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30,
        "memory": 3008
      }
    }
  ],
  "routes": [
    {
      "src": "/api/hello",
      "dest": "api/hello.js",  
      "headers": {
        "Cache-Control": "public, max-age=60"
      }
    },
    {
      "src": "/api/legacy",
      "dest": "api/legacy.js",
      "headers": {
        "Cache-Control": "no-store"
      }
    }
  ]
}